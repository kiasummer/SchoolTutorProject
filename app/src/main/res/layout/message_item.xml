<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp"
    android:layout_gravity="right"
    android:id="@+id/message_item_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/message_first_row"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fio_row_message"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:layout_alignParentTop="true"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/font_size_default"
            android:text="No name"/>

        <ImageView
            android:id="@+id/new_message_icon_message"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_new"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/message_text"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_first_row"
        android:textColor="@color/notActiveTextColorDark"
        android:textSize="@dimen/font_min_text"
        android:text="No messages"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/message_date"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_text"
        android:textColor="@color/notActiveTextColorDark"
        android:textSize="@dimen/font_min_text"
        android:text="date"
        android:maxLines="1"
        />
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->

    <!--android:background="@color/notActiveTextColorDark"-->
    <!--android:layout_below="@+id/last_message"/>-->

</RelativeLayout>