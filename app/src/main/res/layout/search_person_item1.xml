<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fio_row_search"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/font_size_default"
        android:text="No name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/extra_info_search"
        android:layout_below="@+id/fio_row_search"
        android:textColor="@color/notActiveTextColorDark"
        android:textSize="@dimen/font_min_text"
        android:text="No extra information"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/notActiveTextColorDark"
        android:layout_below="@+id/extra_info_search"/>

</RelativeLayout>